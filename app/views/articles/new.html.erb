<div class="page-wrapper">
  <div class="pagetitle">
    記事作成ページ
  </div>
  <div class="new-article box">
    <%= form_with model: @article, url: articles_path, local: true do |f| %>
      <%= render 'shared/error_messages', model: f.object %>
      <div class="">
        <%= f.label :title, "タイトル"%><br>
        <%= f.text_field :title, class:"article-input" %>
      </div>
      <div class="">
        <%= f.label :text, "本文"%><br>
        <div class="examples">
          (マークダウン記法で記述することができます。 ※マークダウン記法の詳細：)
        </div>
        <%= f.text_area :text, class:"article-input main-input" %>
      </div>
      <%= f.submit '保存', class:'btn btn-primary' %>
    <% end %>
  </div>
</div>